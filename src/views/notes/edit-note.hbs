<link rel="stylesheet" type="text/css" href="/css/stylesnotes.css">
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card card_new">
            <div class="card-header mt-3 mb-0 card_header_css">
                <h5 class="card-title mt-auto mb-auto">
                    <i class="fas fa-edit tag_icon input-group-text"></i>
                    Edit Note
                </h5>
            </div>
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <div class="card-body">
                    <div class="mb-2">
                        <input type="text" name="title" class="form-control" value="{{note.title}}" autofocus>
                    </div>
                    <div class="mb-3">
                        <textarea name="description" class="form-control">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-warning w-100" type="submit">
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>